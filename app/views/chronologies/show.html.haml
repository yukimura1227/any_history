- model_class = Chronology
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @chronology.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @chronology.description
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @chronology.user_id
%p
  %strong= model_class.human_attribute_name(:token) + ':'
  %br
  = @chronology.token


= link_to t('.back', :default => t("helpers.links.back")), chronologies_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_chronology_path(@chronology), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), chronology_path(@chronology), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
