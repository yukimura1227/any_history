= form_for @chronology, html: { class: "form form-horizontal chronology" } do |f|
  .form-group
    = f.label :title, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :title, class: 'form-control', required: true
    = f.error_span(:title)
  .form-group
    = f.label :description, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :description, class: 'form-control', required: true
    = f.error_span(:description)
  .form-group
    = f.label :min_year, class: 'control-label col-lg-2'
    .col-lg-10
      = f.number_field :min_year, class: 'form-control', required: true
    = f.error_span(:min_year)
  .form-group
    = f.label :max_year, class: 'control-label col-lg-2'
    .col-lg-10
      = f.number_field :max_year, class: 'form-control', required: true
    = f.error_span(:max_year)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), chronologies_path, :class => 'btn btn-default'
