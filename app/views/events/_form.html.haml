= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :chronology_id
    = f.number_field :chronology_id
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :month
    = f.number_field :month
  .field
    = f.label :category_id
    = f.number_field :category_id
  .actions
    = f.submit 'Save'
